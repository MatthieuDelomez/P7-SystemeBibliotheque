<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
        
<struts>
    
    
    <package name="default" extends="struts-default">        
     

        <!-- Action par défaut-->
        <default-action-ref name="index" />
 

        <!-- Action "index" -->
        <action name="index">
            <result>index.jsp</result>
        </action>
        
        <!-- Action "header" -->
        <action name="header">
            <result>WEB-INF/jsp/_include/header.jsp</result>
        </action>
        
        <!-- Action "login" success -->
        <action name="welcome_user">
            <result>WEB-INF/jsp/welcome_user.jsp</result>
        </action>
        
        <!-- Action pour s'inscrire -->
        <action name="addClient">
            <result>WEB-INF/jsp/addClient.jsp</result>
        </action>
        
                <!-- Action pour s'inscrire
        <action name="login">
            <result>WEB-INF/jsp/login.jsp</result>
        </action>  -->
        
        <!-- Action pour effectuer une recherche -->
        <action name="recherche">
            <result>WEB-INF/jsp/recherche.jsp</result>
        </action> 
        
      <!-- Action pour permettre à l'utilisateur de se connecter -->
      <action name="login" 
                     class="com.client.action.LoginAction" 
                     method="doLoginClient">
                <result name="input">WEB-INF/jsp/login.jsp</result>
                <result name="success" type="redirectAction">welcome_user</result>
      </action>
     
       <!-- Action pour permettre à l'utilisateur de se déconnecter -->
      <action name="logout"
                     class="com.client.action.LoginAction"
                     method="doLogout">
      <result name="success" type="redirectAction">index</result>
      </action> 
      
      
        <!-- Action pour vérif les employes -->
        <action name="employe"
                       class="com.client.action.GestionEmployeAction"
                       method= "verfiEmploye">
            <result name="input">WEB-INF/jsp/employe.jsp</result>
            <result name="success" type="redirectAction">accueilEmploye</result>
        </action> 
        
        <!-- Action pour effectuer une redirection employe -->
        <action name="accueilEmploye">
            <result>WEB-INF/jsp/accueilEmploye.jsp</result>
        </action> 
        


    </package>
</struts>