<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="default" extends="struts-default">
        <!-- Action par dÃ©faut -->
        <default-action-ref name="index" />

        <!-- Action "index" -->
        <action name="index">
            <result>/index.jsp</result>
        </action>
            
                    <!-- Action listant les projets -->
        <action name="document_list"
                class="com.controllers.GestionProjetAction"
                method="doList">
            <result>/jsp/list.jsp</result>
        </action>
        <!-- Action affichant le dÃ©tail d'un projet -->
        <action name="document_detail"
                class="com.controllers.GestionProjetAction"
                method="doDetail">
            <result name="success">/jsp/projet/detail.jsp</result>
            <result name="error">/jsp/error.jsp</result>
        </action>

        <!-- Action affichant le dÃ©tail d'un utilisateur -->
        <action name="utilisateur_detail"
                class="com.controllers.GestionProjetAction"
                method="doDetail">
            <result name="success">/jsp/utilisateur/detail.jsp</result>
            <result name="error">/jsp/error.jsp</result>
        </action>
            
            

    </package>
</struts>